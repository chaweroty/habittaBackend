generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  Verified
  Unverified
  Pending
  Deleted
}

model User {
  id               String        @id @default(uuid())
  name             String
  email            String        @unique
  password         String
  phone            String
  role             String
  status           UserStatus    @default(Unverified)
  verificationCode String?
  pushToken        String?       @default("")
  creation_date    DateTime      @default(now())
  properties       Property[]
  subscriptions    Subscription[]
  applications     Application[]
  legalDocuments   LegalDocument[]
  ownerContracts    Contract[]    @relation("OwnerRelation")
  renterContracts   Contract[]    @relation("RenterRelation")
  paymentsMade    Payment[] @relation("PayerRelation")
  paymentsReceived Payment[] @relation("ReceiverRelation")
  maintenancesAsOwner Maintenance[] @relation("OwnerMaintenanceRelation")
  maintenancesAsUser Maintenance[] @relation("UserMaintenanceRelation")
}

enum publicationStatus {
  published
  rented
  disabled
  expired
  deleted
}

model Property {
  id                String      @id @default(uuid())
  id_owner          String
  title             String
  description       String
  address           String
  city              String
  price             Float
  type              String
  rooms             Int
  bathrooms         Int
  area              Float
  services          String @db.VarChar(2000)
  publication_status publicationStatus @default(published)
  publication_date  DateTime     @default(now())
  owner             User         @relation(fields: [id_owner], references: [id])
  subscription      Subscription?
  images            ImageProperty[]
  applications      Application[]
  legalDocuments    LegalDocument[]
  maintenances      Maintenance[]
}

model Plan {
  id      Int      @id @default(autoincrement())
  name         String
  price        Float
  duration_days Int
  features     String @db.VarChar(500)
  subscriptions Subscription[]
}

enum suscriptionStatus {
  active
  inactive
  cancelled
  expired
  pending_payment
}

model Subscription {
  id String   @id @default(uuid())
  id_owner       String
  id_property    String   @unique
  id_plan        Int
  start_date     DateTime @default(now())
  final_date     DateTime?
  status         suscriptionStatus @default(pending_payment)
  auto_renew     Boolean  @default(false)
  plan_price     Float
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  owner          User     @relation(fields: [id_owner], references: [id])
  property       Property @relation(fields: [id_property], references: [id])
  plan           Plan     @relation(fields: [id_plan], references: [id])
}

model ImageProperty {
  id         String   @id @default(uuid())
  id_property String
  url_image  String
  property   Property @relation(fields: [id_property], references: [id])
}

enum applicationStatus {
  pending
  pre_approved
  approved
  rejected
  withdrawn
  documents_required
  signed
  terminated
}

model Application {
  id               String   @id @default(uuid())
  id_renter        String
  id_property      String
  status           applicationStatus @default(pending)
  description      String?
  application_date DateTime @default(now())
  renter           User     @relation(fields: [id_renter], references: [id])
  property         Property @relation(fields: [id_property], references: [id])
  legalDocuments   LegalDocument[]
  contracts        Contract[]
}

enum belongsTo {
  user
  property
  application
}

enum documentStatus {
  pending
  approved
  rejected
  expired
  deleted
}

model LegalDocument {
  id            String   @id @default(uuid())
  id_user       String?
  id_property   String?
  id_application String?
  belongs_to    belongsTo
  type          String
  description   String? @db.VarChar(500)
  notes         String? @db.VarChar(500)
  url_document  String
  upload_date   DateTime    @default(now())
  status        documentStatus
  user          User?        @relation(fields: [id_user], references: [id])
  property      Property?   @relation(fields: [id_property], references: [id])
  application   Application? @relation(fields: [id_application], references: [id])
  contracts     Contract[]
}

enum contextType {
  normal
  cancelledByTenant
  cancelledByOwner
  breachByTenant
  breachByOwner
  other
}

enum reviewStatus {
  pending
  published
  disabled
  deleted
}

model Review {
  id             String      @id @default(uuid())
  id_application String
  id_author      String
  id_receiver    String
  rating         Boolean?
  comment        String? @db.VarChar(500)
  context_type   contextType
  weight         Decimal
  status         reviewStatus @default(pending)
  create_date    DateTime    @default(now())
}

model Contract {
  id_contract       String      @id @default(uuid())
  id_application    String
  id_owner          String
  id_document       String?
  id_renter         String
  start_date        DateTime
  end_date          DateTime?
  rent_amount       Float
  payment_frequency String
  status            String

  application       Application @relation(fields: [id_application], references: [id])
  owner             User        @relation(fields: [id_owner], references: [id], name: "OwnerRelation")
  document          LegalDocument? @relation(fields: [id_document], references: [id])
  renter            User        @relation(fields: [id_renter], references: [id], name: "RenterRelation")
}

enum RelatedType {
  rent
  subscription
  maintenance
  other
}

enum PaymentMethod {
  card
  bank_transfer
  app_transfer
  cash
  other
}

enum PaymentStatus {
  pending
  processing
  completed
  failed
  refunded
  overdue
  cancelled
}

model Payment {
  id_pay         String      @id @default(uuid())
  id_payer       String
  id_receiver    String?
  related_type   RelatedType
  id_related     String
  concept        String
  description    String?
  amount         Float
  currency       String      @default("COP")
  method         PaymentMethod?
  payment_date   DateTime?
  due_date       DateTime?
  reference_code String?     @unique
  notes          String?
  created_at     DateTime    @default(now())
  status         PaymentStatus @default(pending)

  payer          User        @relation(fields: [id_payer], references: [id], name: "PayerRelation")
  receiver       User?       @relation(fields: [id_receiver], references: [id], name: "ReceiverRelation")
  maintenances   Maintenance[]
}

enum MaintenanceStatus {
  pending
  accepted
  confirmed
  rejected
  completed
}

enum MaintenanceCreatedBy {
  owner
  user
}

enum MaintenanceResponsibility {
  owner
  user
}

model Maintenance {
  id_maintenance   String                    @id @default(uuid())
  id_property      String
  id_owner         String
  id_user          String
  title            String
  description      String?                   @db.VarChar(1000)
  status           MaintenanceStatus         @default(pending)
  responsibility   MaintenanceResponsibility @default(owner)
  cost_estimate    Float?
  scheduled_date   DateTime?
  confirmed_date   DateTime?
  completed_date   DateTime?
  attachments      Json?
  created_by       MaintenanceCreatedBy
  id_payment       String?
  created_at       DateTime                  @default(now())
  updated_at       DateTime                  @updatedAt

  property         Property @relation(fields: [id_property], references: [id])
  owner            User     @relation(fields: [id_owner], references: [id], name: "OwnerMaintenanceRelation")
  user             User     @relation(fields: [id_user], references: [id], name: "UserMaintenanceRelation")
  payment          Payment? @relation(fields: [id_payment], references: [id_pay])
}
